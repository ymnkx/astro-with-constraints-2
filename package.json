{
  "name": "design-system-constraints",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "preinstall": "node scripts/initialSetting.js",
    "dev": "astro dev",
    "build": "astro build && npm run check-ng-words",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src/ --ext .astro,.ts",
    "delivery": "npm run build && npm run delivery:copy && npm run delivery:format && npm run delivery:format2 && npm run delivery:list",
    "delivery:copy": "node 'scripts/copyDirectory.js'",
    "delivery:format": "prettier --write 'build/htdocs/**/*.html'",
    "delivery:format2": "node 'scripts/deleteBlankLine.js'",
    "delivery:list": "node 'scripts/makeFileList.js'",
    "make-svg-sprite": "node 'scripts/makeSvgSprite.js'",
    "convert-webp": "node 'scripts/convertWebp.js'",
    "check-ng-words": "node 'scripts/checkNgWords.js'",
    "style-dictionary": "npm run style-dictionary:base && npm run style-dictionary:composite",
    "style-dictionary:base": "style-dictionary build --config ./sd.config.js",
    "style-dictionary:composite": "style-dictionary build --config ./sd.config.c.js --verbose"
  },
  "dependencies": {
    "astro": "^5.3.0",
    "swiper": "^11.2.4"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.3.1",
    "@markuplint/astro-parser": "^4.6.16",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "lodash": "^4.17.21",
    "markuplint": "^4.11.6",
    "node-html-parser": "^7.0.1",
    "prettier": "^3.5.0",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.83.4",
    "sharp": "^0.33.5",
    "style-dictionary": "^5.0.0",
    "stylelint": "^16.14.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "svg-sprite": "^2.0.4",
    "tree-node-cli": "^1.6.0"
  }
}
